<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    >

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    >

    <TextView
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvUnvanSoyagaci"
        android:text="Unvan"
        android:textSize="@dimen/text_size"
        android:background="#ffffbb6d"
        android:layout_margin="5px"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="5" />


    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/tvAdSoyadSoyAgaci"
        android:text="@string/anne"
        android:background="#ffffbb6d"
        android:layout_margin="5px"
        android:textSize="@dimen/text_size"
        android:layout_row="0"
        android:layout_column="9"
        android:layout_columnSpan="8"
        android:layout_width="218dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDogTarihiSoyAgaci"
        android:text="Dogum Tarihi"
        android:background="#ffffbb6d"
        android:textSize="@dimen/text_size"
        android:textAlignment="center"
        android:layout_marginBottom="5px"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="15" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSonucSoyAgaci"
        android:text="Aynı Yaştasınız"
        android:textSize="@dimen/text_size"
        android:textAlignment="center"
        android:layout_marginBottom="10px"
        android:background="#ffffbb6d"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnSpan="16" />



</GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#000"/>




</LinearLayout>